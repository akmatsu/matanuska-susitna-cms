{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": [
    "@tsconfig/recommended/tsconfig.json",
    "@tsconfig/node22/tsconfig.json",
    "@tsconfig/next/tsconfig.json"
  ],
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
