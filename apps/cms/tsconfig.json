{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/.keystone/types"
    ]
  },
  "watchOptions": {
    "watchFile": "useFsEventsOnParentDirectory",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": false
  },
  "include": [
    "./src",
    "./admin",
    "./keystone.ts",
    "./seed-data.ts",
    "./codegen.ts",
    "./src/components/customFields/publishDraft"
  ],
  "exclude": [
    "./.keystone",
    "./.turbo",
    "./node_modules",
    "./logs",
    "./migrations",
    "./public",
    "./coverage",
    "./dist",
    "./build"
  ]
}
